<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ozero_reflex" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OnePlayerActivity"
            android:label="@string/title_activity_one_player" >
        </activity>
        <activity
            android:name=".TwoPlayerActivity"
            android:label="@string/title_activity_two_player" >
        </activity>
        <activity
            android:name=".ThreePlayerActivity"
            android:label="@string/title_activity_three_player" >
        </activity>
    </application>

</manifest>
